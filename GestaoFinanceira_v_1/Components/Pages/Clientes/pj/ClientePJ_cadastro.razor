                            <option value="0"> nenhuma cidade </option>
                        }
                        else
                        {
                          @foreach(Cidade cid in cidadesCelecionadas)
                            {
                                <option value="@cid.Id_cidade"> @cid.Nome_cid </option>
                            }  
