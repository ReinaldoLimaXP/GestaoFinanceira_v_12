                </div>
                &nbsp  &nbsp  
                <div class="form-group col-md-3">
                    <label>Responsável: </label>
                    <InputText id="dataNasc" @bind-Value="clientePJ.Responsavel_PJ" class="form-control"/>
                </div>
                
                
