      <div class="input-group mb-8">
          <div class="form-group col-md-4"> 
              <label>Bairro: *</label>
                <InputText id="bairro" @bind-Value="clientePJ.Bairro" class="form-control"/>
           </div>
            
            &nbsp   &nbsp &nbsp  &nbsp 
