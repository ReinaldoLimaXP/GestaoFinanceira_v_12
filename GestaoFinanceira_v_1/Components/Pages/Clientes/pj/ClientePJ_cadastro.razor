<EditForm Model="@clientePJ" OnValidSubmit="@Cadastrar" FormName="Cad_clientePJ">
    <ObjectGraphDataAnnotationsValidator />
    <hr/>

     <!--Inicio do div dos forms e da imagem-->
     <div class="input-group">
         <!--Inicio do div dos forms-->
